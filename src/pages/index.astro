---
import Layout from '../layouts/Layout.astro';
import Navbar_nav from "../components/Navbar-nav.astro";
import SectionHome from "../components/SectionHome.astro";
import SectionAos_Animation from "../components/SectionAos-Animation.astro";
import CodeBlock from "../components/CodeBlock.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Aos-Animate | Spectral">
    <div class="flex flex-col items-center">
        <div class="image bg-center bg-no-repeat w-[100%] h-[100dvh] bg-cover absolute"></div>
        <Navbar_nav />
        <SectionHome />
        <SectionAos_Animation />
        <CodeBlock />
        <Footer />
    </div>
</Layout>

<style>
.image { background-image: url('../image/pexels.webp'); }
.image::before {content: '';position: absolute;top: 0;left: 0;width: 100%;height: 100%;background: linear-gradient(to bottom, transparent, black);}
</style>

